<div id="row1">
	<section id="slide-one" class="slide">
	  <article class="slide-inner">
	  	<% @shirts.each do |shirt| %>
      <% @shirt_image = shirt.image %>
	  <figure>
      <img src=<%="#{shirt.image}"%> alt=""/>
	  </figure>
	  <% end %>
	  </article>
		<a href="#" class="btn right" >></a>
		<a href="#" class="btn left" ><</a>
	</section>
</div>

<div id="row2">
	<section id="slide-two" class="slide">
	  <article class="slide-inner">
	  	<% @pants.each do |pant| %>
      <% @pants_image = pant.image %>

	  <figure>
      <img src=<%="#{pant.image}"%> alt=""/>
	  </figure>
	  <% end %>
	  </article>
		<a href="#" class="btn right" >></a>
