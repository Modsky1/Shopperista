<% binding.pry %>

<form method="Post">
  <input type="hidden" name="pant" value=<% @pants_image %> />
    <input type="hidden" name="shirt" value=<% @shirt_image %> />
    <input type="hidden" name="shirt" value=<% @shoe_image %> />
  <button type="submit" onclick="alert('Hello world!')">Add Outfit</button>
</form>


<script type="text/javascript">
	// Call plugin if you put in head if not not require DOMContentLoaded
	document.addEventListener('DOMContentLoaded',function(){
	  new boxSlider(document.querySelector('#slide-one'),{
	      delay: '1000', // ms
	      effect: 'ease-in-out'
	  });

	 	new boxSlider(document.querySelector('#slide-two'),{
	      delay: '2000', // ms
	      effect: 'ease'
	  });

	 	new boxSlider(document.querySelector('#slide-three'),{
	      delay: '500', // ms
	      effect: 'linear'
	  });
	});
</script>
